<mah:MetroWindow x:Class="Patty.MainWindow"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:viewModel="clr-namespace:Patty.ViewModel"
                 xmlns:controls="clr-namespace:Patty.View"
                 xmlns:view="clr-namespace:Patty"
                 mc:Ignorable="d"
                 d:DataContext="{d:DesignInstance Type=viewModel:MainWindowViewModel}"
                 Title="MainWindow" Height="450" Width="800">
    <Grid VerticalAlignment="Stretch"
          HorizontalAlignment="Stretch">
        <ContentControl Content="{Binding Path=DataContext.Model.WindowContent, RelativeSource={RelativeSource AncestorType={x:Type view:MainWindow}}}"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">

        </ContentControl>
    </Grid>
</mah:MetroWindow>
